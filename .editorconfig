root = true

# General settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Specific settings for C/C++ sources
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4

# Makefiles require hard tabs
[{Makefile,**.mk}]
indent_style = tab
tab_width = 4

# CMake files
[CMakeLists.txt]
indent_style = space
indent_size = 4

# JSON / Web formats
[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2
